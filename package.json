{
  "name": "eslint-config-outfunnel",
  "version": "1.0.7",
  "description": "Javascript style guide",
  "main": "index.js",
  "engines": {
    "node": ">= 10"
  },
  "scripts": {
    "test": "echo \\\"Error: no test specified\\\" && exit 1",
    "eslint": "$(npm bin)/eslint --report-unused-disable-directives .",
    "eclint": "$(npm bin)/eclint check * rules/*",
    "lint": "npm run eclint && npm run eslint",
    "ncu": "$(npm bin)/ncu"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/outfunnel/eslint-config-outfunnel.git"
  },
  "author": "Outfunnel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/outfunnel/eslint-config-outfunnel/issues"
  },
  "homepage": "https://github.com/outfunnel/eslint-config-outfunnel#readme",
  "dependencies": {
    "confusing-browser-globals": "^1.0.9"
  },
  "peerDependencies": {
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsdoc": "^15.10.0",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-sonarjs": "^0.4.0",
    "prettier": "^1.18.2"
  },
  "devDependencies": {
    "eclint": "^2.8.1",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsdoc": "^15.10.0",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-sonarjs": "^0.4.0",
    "husky": "^3.0.8",
    "lint-staged": "^9.4.2",
    "npm-check-updates": "^3.1.24",
    "prettier": "^1.18.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run ncu",
      "post-merge": "npm install"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "git add"
    ]
  }
}
